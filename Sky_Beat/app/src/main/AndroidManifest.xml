        android:supportsRtl="true"
        android:theme="@style/Theme.Sky_Beat">
        <activity android:name=".splashScreenActivity"  android:noHistory="true" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".Activity.Album_details" />
        <activity android:name=".Activity.PlayerActivity" />
        <activity android:name=".Activity.MainActivity" />
    </application>

</manifest>